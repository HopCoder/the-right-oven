<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".main_menu"
    android:rowCount="2"
    android:columnCount="1">
    <!--android:background="#942CFF"-->

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="170pt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="1dp"
        android:id="@+id/imageButton"
        android:background="#000000"
        android:onClick="commentClick"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imageButton">

        <ImageButton
            android:id="@+id/shuck_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shuck"
            android:onClick="shuckClick"/>
        <View
            android:id="@+id/view"
            android:layout_width="40dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/puck_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puck It"
            android:onClick="puckClick"
            android:background="#942CFF"/>
        </LinearLayout>


</RelativeLayout>